<div class="comment-card">
  <%= image_tag(comment.user.photo) %>
  <div class="comment-info-wrap">
    <div class="comment-info">
      <h2><%= comment.user.full_name %></h2>
      <p>Il y a <%= time_ago_in_words(comment.created_at) %></p>
    </div>
    <div class="comment">
      <p><%= comment.comment %></p>
    </div>
    <div class="comment-link">
      <%= link_to 'Répondre', new_comment_answer_path(comment), class: 'button-select' %>
    </div>

    <div class="answers-wrap">
      <h2>Réponses:</h2>
      <% if comment.answers.any? %>
          <% comment.answers.each do |answer| %>
            <%= render 'shared/answer-card', answer: answer %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>








