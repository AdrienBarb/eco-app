<!DOCTYPE html>
<html>
  <head>
    <title>EcoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="nav-bar-wraper">
      <div class="nav-bar">
        <div class="navigation-link">
          <ul>
            <li class="<%= "active" if current_page?("/") %>"><%= link_to 'Home', root_path %></li>
            <% if user_signed_in? %>
              <li class="<%= "active" if current_page?(user_path(current_user)) %>"><%= link_to 'Mon profil', user_path(current_user)  %></li>
            <% end %>
          </ul>
        </div>
        <div class="connect-link">
          <% if user_signed_in? %>
            <div class="dropdown">
              <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="connected-button">
                  <%= image_tag current_user.avatar.url %>
                  <%= current_user.first_name %>
                </div>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Se dÃ©connecter', destroy_user_session_path, method: :delete, class: "dropdown-item"%>
              </div>
            </div>
          <% else %>
            <ul>
              <li><%= link_to "S'enregistrer", new_user_registration_path  %></li>
              <li><%= link_to 'Se connecter', new_user_session_path  %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>


  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key %>">
        <%= message %>
    </div>
  <% end %>

      <%= yield %>



  </body>
</html>
