<div class="form-wrapper">
  <div class="form">

    <h2>Cr√©er un projet</h2>

    <%= form_for @project do |f| %>

      <div class="field">

        <%= f.text_field :name, placeholder: 'Nom du projet', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_area :description, placeholder: 'Description du projet', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :website_url, placeholder: 'URL du site internet', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :linkedin_url, placeholder: 'URL Linkedin', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :twitter_url, placeholder: 'URL Twitter', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :facebook_url, placeholder: 'URL Facebook', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :instagram_url, placeholder: 'URL Instagram', class: 'form-field' %>
      </div>

      <div class="field">

        <%= f.text_field :tag_names, placeholder: 'Tags', class: 'form-field' %>
      </div>

      <div class="field">
        <%= f.label :images %>
        <%= f.file_field :images, :multiple => true %>
      </div>

      <div class="field">
        <%= f.label :category_id %>
        <%= f.select :category_id, @categories.map { |s| [s.category, s.id] } %>
      </div>

      <div class="actions">
        <%= f.submit "Valider", id: 'button-valid'%>
      </div>
    <% end %>

  </div>
</div>
