<div id="project-show-wrap">


    <div class="project-show-project-description">
      <div class="project-description">
        <h1><%= @project.name %></h1>
        <h4><%= @project.category.category %></h4>
        <p><%= @project.description %></p>
        <div id="tag">
          <% if @project.tags.any? %>
            <h2>Tags:</h2>
            <% @project.tags.each do |tag| %>
              <%= render "tags/tag", tag: tag, project: @project %>
            <% end %>
          <% end %>
        </div>
        <div class="buttons">
          <div id="button">
            <% if policy(@project).update? %>
              <%= link_to 'Modifier mon projet', edit_project_path(@project) %>
            <% end %>
          </div>
          <div id="button">
            <% if policy(@project).destroy? %>
              <%= link_to "Suprimer", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this ticket?"}, class: "delete" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="project-show-vote" id="vote">
        <p><%= @project.votes.count %></p>
        <p><%= link_to 'Voter', upvote_project_path(@project), method: :patch %></p>
      </div>
    </div>



  <div id="contributor">
    <h1>Contributeur:</h1>
    <div class="contributor-card-list-wraper">
      <div class="contributor-card-list">
        <ul>
          <% @project.users.each do |user| %>
            <li>
              <div id="contributor-card">
                <%= render 'shared/contributor-card', user: user %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="contributor-link">
        <% if policy(@project).update_roles? %>
          <%= link_to 'Modifier', edit_roles_project_path(@project) %>
        <% end %>
      </div>
    </div>
  </div>

  <div id="comments">
    <h1>Commentaires:</h1>
    <%= link_to 'Laisser un commentaire', new_project_comment_path(@project) %>
    <% if @project.comments.any? %>
      <ul>
        <% @project.comments.each do |comment| %>
          <li>
            <%= render 'comments/comment', comment: comment %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>




