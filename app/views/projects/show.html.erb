<div id="project">
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <p><%= @project.category.category %></p>

  <div id="tag">
    <% if @project.tags.any? %>
      <h2>Tags:</h2>
      <% @project.tags.each do |tag| %>
        <%= render "tags/tag", tag: tag, project: @project %>
      <% end %>
    <% end %>
  </div>

  <div id="vote">
    <%= @project.votes.count %>
    <%= link_to 'Voter', upvote_project_path(@project), method: :patch %>
  </div>


  <% if policy(@project).update? %>
    <%= link_to 'Modifier mon projet', edit_project_path(@project) %>
  <% end %>

  <% if policy(@project).destroy? %>
  <%= link_to "Suprimer", project_path(@project), method: :delete,
                                                              data: { confirm: "Are you sure you want to delete this ticket?"},
                                                              class: "delete" %>
  <% end %>
</div>



<h1>Contributeur:</h1>
<div id="contributor">
  <ul>
    <% @project.users.each do |user| %>
      <li>
        <%= user.full_name %>
        <%= user.roles.find_by(project_id: @project).role %>
      </li>
    <% end %>
  </ul>

  <% if policy(@project).update_roles? %>
    <%= link_to 'Modifier', edit_roles_project_path(@project) %>
  <% end %>
</div>

<div id="comments">
  <h1>Commentaires:</h1>
  <%= link_to 'Laisser un commentaire', new_project_comment_path(@project) %>
  <% if @project.comments.any? %>
    <ul>
      <% @project.comments.each do |comment| %>
        <li> <%= render 'comments/comment', comment: comment %></li>
      <% end %>
    </ul>
  <% end %>
</div>




